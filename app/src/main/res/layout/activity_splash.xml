<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackgroundContainer"
    tools:context=".activity.SplashActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/space24">

        <ImageView
            android:id="@+id/id_img_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_turismo"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space56"/>

        <TextView
            android:id="@+id/id_txt_red1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space24"
            android:text="Red Social"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/space24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_txt_red2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ecuador TurÃ­stico"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/space24"
            android:textStyle="bold" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/space56">

        <TextView
            android:id="@+id/id_txt_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Rincor del Sur"
            android:textColor="@color/colorTextDark" />

        <TextView
            android:id="@+id/id_txt_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V. 1.0"
            android:textColor="@color/colorTurk" />

        <TextView
            android:id="@+id/id_txt_dtk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company"
            android:textColor="@color/colorWhiteDark"
            android:textSize="12dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.coordinatorlayout.widget.CoordinatorLayout>